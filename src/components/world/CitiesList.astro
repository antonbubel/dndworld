---
import type { CollectionEntry } from "astro:content";
import CityLink from "./CityLink.astro";

interface Props {
  title: string;
  region: CollectionEntry<"regions">;
  cities: CollectionEntry<"cities">[];
}

const { title, region, cities } = Astro.props;
---

{
  cities?.length > 0 && (
    <>
      <h3>
        <span class="bold">{title}:</span>
      </h3>
      <ul>
        {cities.map((city) => (
          <li>
            <CityLink region={region} city={city} />
          </li>
        ))}
      </ul>
    </>
  )
}
